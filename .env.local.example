# Copy your .env file and rename this to .env.local for local development
# This file overrides .env and is git-ignored for security

# Primary Database (Neon) - REPLACE WITH YOUR OWN
DATABASE_URL='postgresql://your_user:your_password@your_neon_endpoint/your_database?sslmode=require&channel_binding=require'

# Backup: You can uncomment one of these if Neon fails
# Local PostgreSQL (if you have it installed)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/rozgaarsetu"

# Alternative: SQLite for local development (requires schema changes)
# DATABASE_URL="file:./dev.db"

# Clerk Authentication - GET YOUR OWN FROM CLERK.COM
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/onboarding

# Azure Translator - GET YOUR OWN FROM AZURE
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=your_region
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# Google Translate API - GET YOUR OWN FROM GOOGLE CLOUD
GOOGLE_TRANSLATE_API_KEY=your_google_api_key_here